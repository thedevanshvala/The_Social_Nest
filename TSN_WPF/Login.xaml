<Window x:Class="TSN_Wpf.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Username"/>
                <TextBox x:Name="txtUsername" Width="200" Height="30" Margin="10,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Password"/>
                <PasswordBox x:Name="txtPassword" Width="200" Height="30" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,10,0,0">

                <Button Content="Login" Width="100" Height="30" Click="Login_Click"/>
                <Button Content="Register" Width="100" Height="30" Click="Register_Click" Margin="0,10,0,0"/>

            </StackPanel>
        </StackPanel>
        
       
        <TextBlock x:Name="lblMessage" Margin="10,180,0,0"/>
    </Grid>
</Window>
