<Window x:Class="TSN_Wpf.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="240" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,25,0,25">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtUsername" Width="200" Height="30" FontSize="18" Margin="10,0,0,0" 
                         mah:TextBoxHelper.Watermark="Insert Username" Padding="0,2,0,0"/>

            </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <PasswordBox x:Name="txtPassword"
             Width="170" Height="30" FontSize="18" BorderBrush="Gray"
             Margin="10,10,0,0" Padding="0,2,0,0" BorderThickness="1,1,0,1"
             PasswordChanged="txtPassword_PasswordChanged"/>

                    <TextBox x:Name="txtVisiblePassword"
         Width="170" Height="30" FontSize="18" BorderBrush="Gray"
         Margin="10,10,0,0" Padding="0,2,0,0" BorderThickness="1,1,0,1"
         Visibility="Collapsed"/>

                    <Button Content="👁" Width="30" Height="30" Background="Transparent" BorderBrush="Gray"
        VerticalAlignment="Center" HorizontalAlignment="Right" BorderThickness="0,1,1,1"
        Margin="0,10,10,0" Click="btnShowHidePassword_Click"/>

                </StackPanel>
            </StackPanel>

            <StackPanel Margin="10,10,0,0" Orientation="Horizontal">
                <Button Content="Login" Width="97" Height="30" Click="Login_Click"/>
                <Button Content="Register" Width="98" Height="30" Click="Register_Click" Margin="5,0,0,0"/>
            </StackPanel>
            <Button Content="Forgot Password???" Width="150" Height="30" Click="ForgotPassword_Click" Margin="0,5,0,0"/>
        </StackPanel>

        <TextBlock x:Name="lblMessage" Margin="10,180,0,0"/>
    </Grid>
</Window>